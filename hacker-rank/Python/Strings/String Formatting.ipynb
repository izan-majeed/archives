    "def print_formatted(number):\n",
    "    a = len(bin(number)[2:])\n",
    "    \n",
    "    for i in range(1,number+1):\n",
    "        decimal = i\n",
    "        octal = oct(i)[2:]\n",
    "        hexa = hex(i)[2:].upper()\n",
    "        binary = bin(i)[2:]\n",
    "        print(f\"{decimal:>{a}} {octal:>{a}} {hexa:>{a}} {binary:>{a}}\")"
   ]
